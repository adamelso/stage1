<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %}STAGE1{% endblock %}</title>
    {% stylesheets output="assets/public.css"
        'css/vendor/*'
        'css/stage1.css'
        'css/public.css'
    %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>

<body>

    <div class="row-fluid masthead">
        <div class="container">            
            <ul class="nav nav-pills pull-right">
                <li><a href="http://stage1.io/blog/">Blog</a></li>
                <li><a href="http://help.stage1.io/">Help</a></li>
                
                {% if not app.user or not is_granted('ROLE_USER') %}
                <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                {% endif %}
            </ul>

            <ul class="nav nav-pills">
                <li><a href="{{ path('app_core_homepage') }}">STAGE1</a></li>
            </ul>
        </div>
    </div>

    {% block body %}{% endblock %}

    {% block footer %}
    <div class="row-fluid footer">
        <div class="container">
            <p>Stage1 &copy; 2013-2014</p>
            <br />
            <a href="https://github.com/stage1"><i class="fa fa-github-square fa-4x"></i></a>
            &nbsp;
            <a href="https://twitter.com/stage1hq"><i class="fa fa-twitter-square fa-4x"></i></a>
        </div>
    </div>
    {% endblock %}
</body>
</html>
